{
	"$schema": "https://schemas.elgato.com/streamdeck/plugins/manifest.json",
	"Name": "File Explorer",
	"Version": "0.1.0.0",
	"Author": "Arthur Paucke",
	"Actions": [
		{
			"Name": "Open Folder",
			"UUID": "de.artus.fileexplorer.openfolder",
			"Icon": "imgs/actions/openFolder/icon",
			"Tooltip": "Open a folder and view its content on the Stream Deck or use other actions to open it.",
			"PropertyInspectorPath": "ui/openFolder.html",
			"Controllers": [
				"Keypad"
			],
			"States": [
				{
					"Image": "imgs/actions/openFolder/key",
					"TitleAlignment": "bottom"
				}
			]
		},
		{
			"Name": "Open Parent Folder",
			"UUID": "de.artus.fileexplorer.openparentfolder",
			"Icon": "imgs/actions/openParentFolder/icon",
			"Tooltip": "Opens the parent folder of the currently viewed folder on the Stream Deck.",
			"PropertyInspectorPath": "ui/openParentFolder.html",
			"Controllers": [
				"Keypad"
			],
			"States": [
				{
					"Image": "imgs/actions/openParentFolder/key",
					"TitleAlignment": "bottom"
				}
			]
		},
		{
			"Name": "Folder Item View",
			"UUID": "de.artus.fileexplorer.folderitemview",
			"Icon": "imgs/actions/folderItemView/icon",
			"Tooltip": "View a specific item in a folder on the Stream Deck.",
			"PropertyInspectorPath": "ui/folderItemView.html",
			"Controllers": [
				"Keypad"
			],
			"DisableAutomaticStates": true,
			"States": [
				{
					"Image": "imgs/actions/folderItemView/empty",
					"TitleAlignment": "bottom"
				},
				{
					"Image": "imgs/actions/folderItemView/invisible",
					"TitleAlignment": "middle"
				}
			]
		},
		{
			"Name": "Next Page",
			"UUID": "de.artus.fileexplorer.nextpage",
			"Icon": "imgs/actions/nextPage/icon",
			"Tooltip": "Open the next page of a folder's content on the Stream Deck.",
			"PropertyInspectorPath": "ui/nextPage.html",
			"Controllers": [
				"Keypad"
			],
			"DisableAutomaticStates": true,
			"States": [
				{
					"Image": "imgs/actions/nextPage/key",
					"TitleAlignment": "bottom"
				},
				{
					"Image": "imgs/actions/nextPage/key-disabled",
					"TitleAlignment": "bottom"
				}
			]
		},
		{
			"Name": "Previous Page",
			"UUID": "de.artus.fileexplorer.prevpage",
			"Icon": "imgs/actions/prevPage/icon",
			"Tooltip": "Open the previous page of a folder's content on the Stream Deck.",
			"PropertyInspectorPath": "ui/prevPage.html",
			"Controllers": [
				"Keypad"
			],
			"DisableAutomaticStates": true,
			"States": [
				{
					"Image": "imgs/actions/prevPage/key",
					"TitleAlignment": "bottom"
				},
				{
					"Image": "imgs/actions/prevPage/key-disabled",
					"TitleAlignment": "bottom"
				}
			]
		},
		{
			"Name": "Sort Content",
			"UUID": "de.artus.fileexplorer.sortcontent",
			"Icon": "imgs/actions/sortContent/icon",
			"Tooltip": "Sort the content of the currently opened folder on the Stream Deck.",
			"PropertyInspectorPath": "ui/sortContent.html",
			"Controllers": [
				"Keypad"
			],
			"DisableAutomaticStates": true,
			"States": [
				{
					"Image": "imgs/actions/sortContent/key-asc",
					"TitleAlignment": "bottom"
				},
				{
					"Image": "imgs/actions/sortContent/key-desc",
					"TitleAlignment": "bottom"
				}
			]
		}
	],
	"Category": "File Explorer",
	"CategoryIcon": "imgs/plugin/category-icon",
	"CodePath": "bin/plugin.js",
	"Description": "Open folders and view their content all on the Stream Deck. Navigate through them and open files with a single click. Also images get displayed directly on the Stream Deck. More features: Open parent folder, scroll through pages, show page info, various click actions.",
	"Icon": "imgs/plugin/marketplace",
	"SDKVersion": 3,
	"Software": {
		"MinimumVersion": "6.9"
	},
	"OS": [
		{
			"Platform": "mac",
			"MinimumVersion": "10.15"
		},
		{
			"Platform": "windows",
			"MinimumVersion": "10"
		}
	],
	"Nodejs": {
		"Version": "20",
		"Debug": "enabled"
	},
	"UUID": "de.artus.fileexplorer"
}